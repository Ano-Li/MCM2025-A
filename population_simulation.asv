% 定义参数
K = 20;       % 环境承载能力（最终稳定值）
r = 0.02;       % 增长速率
t = 0:0.1:400; % 时间，从0到100，间隔0.1

% 逻辑斯蒂增长函数
f = K ./ (1 + (K - 1) * exp(-r * t));

% 绘制增长曲线
figure;
plot(t, f, 'LineWidth', 2);
grid on;
xlabel('Time (t)', 'FontSize', 12);
ylabel('Population (f(t))', 'FontSize', 12);
title('Logistic Growth Curve', 'FontSize', 14);


